<h1>All Blog Posts</h1>
<% @posts.each do |post| %>
    <div class="card">
        <div class="card-body">
        <h3 class="card-title"><%= post.title %></h3>
        <p class="card-text"><%= post.body %></p>
        <%= link_to "Read More", post_path(post), :class => 'card-link' %>
        </div>
    </div>
<% end %>